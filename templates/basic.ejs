<div class="row">
	<div class="col l12 m12 s12">
		<div id="content">
			<div class="row">
				<div class="col s12 l12 m12 center-align">
					<h2><%= data.city %>&nbsp;<a href="#!" onclick="showProvinces();"><i class="tiny material-icons grey-text">edit</i></a></h2>
					<img src="{{APP_SERVICE_PATH}}/images/<%= data.icon %>.png" width="100" />
					<p id="sub"><small><%= data.now %></small></p>
				</div>
			</div>
			<table class="stripped">
				<tr><td>Temperatura</td><td> <%- data.temperature %></td></tr>
				<tr><td>Viento</td><td> Hacia el <%- data.windDirection %>, a <%- data.windSpeed %></td></tr>
				<tr><td>Precipitaciones</td><td> <%= data.precipitation %></td></tr>
				<tr><td>Humedad</td><td> <%- data.humidity %></td></tr>
				<tr><td>Presión</td><td> <%- data.pressure %></td></tr>
				<tr><td>Amanecer</td><td> <%= data.sunrise %></td></tr>
				<tr><td>Anochecer</td><td> <%= data.sunset %></td></tr>
				<tr><td>Nubosidad</td><td> <%= data.clouds %></td></tr>
				<tr><td>Actualizado</td><td> <%= data.lastUpdate %></td></tr>
			</table>
		</div>
	</div>
</div>
<div class="row">
	<div class="col l12 m12 s12">
		<h2>Pronóstico del clima</h2>
		<div id="forecast">
			<% for(var i=0; i < fcast.length; i++) { %>
				<div class="row">
					<div class="col l2 m4 s2">
						<img src="{{APP_SERVICE_PATH}}/images/<%= fcast[i].icon %>.png" width="40" />
					</div>
					<div class="col l10 m10 s10">
						<%= formatTime(fcast[i].from.date) %> a <%= formatTime(fcast[i].to.date) %> <br/>
						<%- fcast[i].temperature %> / <%= fcast[i].clouds %> /
						<% if (fcast[i].precipitation != "no") { %>
							<%= fcast[i].precipitation %><br/>
						<% } else { %>
							Sin lluvias
						<% } %>
					</div>
				</div>
			<% } %>
		</div>
	</div>
</div>

